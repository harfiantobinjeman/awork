@model AWork.Contracts.Dto.Sales.CreditCard.CreditCardForCreateDto

@{
    ViewData["Title"] = "Create";
}



<h1>
    <box-icon name='credit-card' animation='tada'> Create Credit Card</box-icon>
    <img src="data:image/png;base64," />
</h1>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardType" class="control-label"></label>
                <input asp-for="CardType" class="form-control" />
                <span asp-validation-for="CardType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control"placeholder="0000 0000 0000 0000" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpMonth" class="control-label"></label>
                <input asp-for="ExpMonth" class="form-control"  />
                <span asp-validation-for="ExpMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpYear" class="control-label"></label>
                <input asp-for="ExpYear" class="form-control" placeholder="00/00/00" />
                <span asp-validation-for="ExpYear" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
          
     
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    $('.credit_card').mask('0000 0000 0000 0000');
    $('.valid').mask('00/00');
}
